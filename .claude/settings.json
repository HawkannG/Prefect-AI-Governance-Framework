{
  "permissions": {
    "deny": [
      "Write(./.claude/CLAUDE.md)",
      "Write(./.claude/rules/*)",
      "Write(./.claude/hooks/*)",
      "Write(./.claude/settings.json)",
      "Edit(./.claude/CLAUDE.md)",
      "Edit(./.claude/rules/*)",
      "Edit(./.claude/hooks/*)",
      "Edit(./.claude/settings.json)",
      "MultiEdit(./.claude/CLAUDE.md)",
      "MultiEdit(./.claude/rules/*)",
      "MultiEdit(./.claude/hooks/*)",
      "MultiEdit(./.claude/settings.json)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/warden-guard.sh",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/warden-bash-guard.sh",
            "timeout": 15
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/warden-post-check.sh",
            "timeout": 15
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/warden-session-end.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
